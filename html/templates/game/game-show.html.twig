{% extends 'base.html.twig' %}
{% block body %}
    <div class="game-informations">
        <div class="game-sources">
            <p><u>author :</u></p><br>
            {% include 'user/user-miniprofile.html.twig' with {user:game.user} %}<br>
        </div>
        <div class="game-content">
            <p><u>title :</u> {{ game.title }}</p> <br>
            <p><u>release date :</u> {{ game.releaseDate|date("Y-m-d", "Europe/Paris")  }}</p> <br>
        </div>
        {#<div class="game-picture">#}
            {#<img src="{{ asset(game.getPicturePath) }}" alt="Image du Jeu">#}
        {#</div>#}
        {# TODO : pic-games #}
    </div>
    <div class="game-posts">
        <div class="game-post-create">
            <a href="post/new/{{ game.id }}">
                <button type="button" class="btn btn-primary btn-lg">Add a post</button>
            </a>
        </div><br>
        <div class="list">
            {% for post in game.posts %}
                {% include 'post/post-miniprofile.html.twig' with {post:post} %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

